@{
    ViewData["Title"] = "Generated Plan";
}


<link href="~/lib/datepicker.css" rel="stylesheet" type="text/css" />
<script src="~/lib/bootstrap-datepicker.js"></script>
<script src="~/js/generatemaintenance.js" type="text/javascript"></script>
<script src="~/js/date.js"></script>
<link rel="stylesheet" href="~/css/createmaintenance.css" />


<div class="container">
    <div class="text-center">
        <h1 class="display-4">
            Aircraft Id: AR@(ViewContext.RouteData.Values["Id"])
        </h1>
    </div>

    <table class='table table-bordered table-condensed table-striped table-hover' id="tableMaintenancePart" style="display:none;">
        <tr><th>Engine Id</th><th>Engine Name</th></tr>
    </table>

    <label>Schedule On: </label>
    <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
        <input class="form-control" type="text" readonly />
        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
    </div>

    <div class="input-group mb-3">
        <input type="text" class="form-control" aria-describedby="basic-addon2" id="seconds">
        <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">minute from now</span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" onclick="createMaintenancePlan()">Create Maintenance Plan</button>


</div>

<input type="hidden" value='@ViewContext.RouteData.Values["id"]' id="routeDataId" />