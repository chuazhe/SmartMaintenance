@{
    ViewData["Title"] = "Create Purchase Order";
}

<script src="~/js/createorder.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/createorder.css" />


<div class="container" style="border-style: solid;">

    <div class="row">
        <div class="col-1">
            <label>Part:</label>
        </div>
        <div class="col-2">
            <div class="btn-group">
                <a class="btn btn-primary dropdown-toggle" id="dropdown" data-toggle="dropdown" href="#">Select Part<span class="caret"></span></a>
                <ul class="dropdown-menu" id="SelectPartName"></ul>
            </div>
        </div>
        <div class="col-1">
            <label>Quantity:</label>
        </div>
        <div class="col-lg-2">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="quantity-left-minus btn btn-danger btn-number" id="minus" data-type="minus" data-field="">
                        <span class="fa fa-minus"></span>
                    </button>
                </span>
                <input type="text" id="quantity" name="quantity" class="form-control input-number" value="0" min="0" max="100">
                <span class="input-group-btn">
                    <button type="button" class="quantity-right-plus btn btn-success btn-number" id="add" data-type="plus" data-field="">
                        <span class="fa fa-plus"></span>
                    </button>
                </span>
            </div>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary" onclick="productAddToTable()">Add</button>
        </div>
    </div>

    <table id="productTable"
           class="table table-bordered
               table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th class="col-1">Quantity</th>
                <th class="col-1"></th>
            </tr>
        </thead>
    </table>

    <div class="row">
        <button type="submit" class="btn btn-primary" onclick="createPurchaseOrder()">Create Purchase Order</button>
    </div>
</div>

 
