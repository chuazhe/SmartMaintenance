@{
    ViewData["Title"] = "Confirm";
}

<script src="~/js/confirmplan.js" type="text/javascript"></script>

<div class="text-center">
    <h1 class="display-4">
        Maintenance Id: @(ViewContext.RouteData.Values["Id"])
    </h1>
</div>

<div class="container-fluid">
    <table class='table table-bordered table-condensed table-striped table-hover' id="tableMaintenancePart" style="display:none;">
        <tr><th>Part Id</th><th>Part Name</th></tr>
    </table>

    <div class="row">
        <div class="col-6">
            <a class="btn btn-primary btn-block btn-lg" href="https://localhost:44300/Plan"><i class="fa fa-10x fa-check-circle" id="approveOrder" onclick="done()"></i><br />Yes</a>
        </div>
        <div class="col-6">
            <a class="btn btn-primary btn-block btn-lg" href="#"><i class="fa fa-10x fa-times-circle" id="declineOrder" onclick="StillInDevelopment()"></i><br />No</a>
        </div>
    </div>
</div>



