@{
    ViewData["Title"] = "Make Maintenance Plan";
}


<link href="~/lib/datepicker.css" rel="stylesheet" type="text/css" />
<script src="~/lib/bootstrap-datepicker.js"></script>

<div class="text-center">
    <h1 class="display-4">
        Aircraft Id: @(ViewContext.RouteData.Values["Id"])
    </h1>
</div>

<label>Schedule On: </label>
<div id="datepicker" class="input-group date" data-date-format="mm-dd-yyyy">
    <input class="form-control" type="text" readonly />
    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
</div>

<button type="submit" class="btn btn-primary" onclick="Test()">Show</button>


<div class="input-group mb-3">
    <input type="text" class="form-control" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <span class="input-group-text" id="basic-addon2">minutes from now</span>
    </div>
</div>

<script src="~/js/date.js" type="text/javascript"></script>
